{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@exceptions/*": [
        "src/exceptions/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@repository/*": [
        "src/repository/*"
      ],
      "@resources/*": [
        "src/resources/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}