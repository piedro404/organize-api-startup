        },
        "responses": {
          "204": {
            "description": "Tarefa atualizada com sucesso."
          }
        }
      },
      "delete": {
        "summary": "Excluir tarefa (autenticado)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Tarefa excluída com sucesso."
          }
        }
